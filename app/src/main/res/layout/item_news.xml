<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="310dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgofnews"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:src="@drawable/trasua" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.4"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/titleofnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title of News"
                android:textSize="18dp"
                android:lines="2"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/desofnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of News"
                android:lines="3"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_detail_news"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/actionofnews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiáº¿t"
                android:textColor="@color/orange"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>